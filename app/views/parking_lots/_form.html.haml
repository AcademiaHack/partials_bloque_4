= form_for @parking_lot do |f|
  - if @parking_lot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parking_lot.errors.count, "error")} prohibited this parking_lot from being saved:"
      %ul
        - @parking_lot.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :location
    = f.text_field :location
  -if es_un_formulario_de_creacion
    .field
      = f.label :total_floors
      = f.number_field :total_floors
  .actions
    = f.submit 'Save'
